package lab7;

public class bricks {
	public static void main(String args[]) {
		
	}
	
	private static int countPatterns(int size) {
		int brick1 = 1;
		int brick3 = 3;
		
		int total = 0;
		
		if(size == 0) {
			return 0;
		} else if (size == 1) {
			return 1;
		} else {
			return countPatterns(size - 1) + countPatterns(size - 3);
		}
		
		
		
		return total;
	}
}
